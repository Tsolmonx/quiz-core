<?xml version="1.0" encoding="UTF-8"?>

<resources xmlns="https://api-platform.com/schema/metadata/resources-3.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="https://api-platform.com/schema/metadata/resources-3.0 http://api-platform.com/schema/metadata/resources-3.0.xsd">
    <resource class="App\Entity\User" shortName="User">
        <normalizationContext>
            <values>
                <value name="groups">
                    <values>
                        <value>app:user:read</value>
                        <value>app:user:list</value>
                    </values>
                </value>
            </values>
        </normalizationContext>
        <denormalizationContext>
            <values>
                <value name="groups">
                    <values>
                        <value>app:user:write</value>
                        <value>app:user:change-password</value>
                    </values>
                </value>
            </values>
        </denormalizationContext>

        <operations>
            <operation name="app_get" class="ApiPlatform\Metadata\Get" uriTemplate="/users/{id}"
                method="GET" />
            <operation name="app_post" class="ApiPlatform\Metadata\Post" uriTemplate="/register"
                method="POST" processor="App\State\UserPasswordHasher">
                <validationContext>
                    <values>
                        <value name="groups">
                            <values>
                                <value>app:user:write</value>
                            </values>
                        </value>
                    </values>
                </validationContext>
            </operation>
            <operation
                name="app_get_me"
                method="GET"
                class="ApiPlatform\Metadata\Get"
                controller="App\Controller\User\GetMeAction"
                uriTemplate="/me"
                read="false"
            />
            <operation
                name="app_put"
                method="PATCH"
                class="ApiPlatform\Metadata\Put"
                uriTemplate="/users/{id}/change-password"
                processor="App\State\UserPasswordHasher"
            >
                <denormalizationContext>
                    <values>
                        <value name="groups">
                            <values>
                                <value>app:user:change-password</value>
                            </values>
                        </value>
                    </values>
                </denormalizationContext>
                <validationContext>
                    <values>
                        <value name="groups">
                            <values>
                                <value>app:user:change-password</value>
                            </values>
                        </value>
                    </values>
                </validationContext>
            </operation>
        </operations>
    </resource>
</resources>
