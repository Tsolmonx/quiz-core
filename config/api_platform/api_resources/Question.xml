<?xml version="1.0" encoding="UTF-8"?>

<resources xmlns="https://api-platform.com/schema/metadata/resources-3.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="https://api-platform.com/schema/metadata/resources-3.0 http://api-platform.com/schema/metadata/resources-3.0.xsd">

    <!-- Create Question  -->
    <resource class="App\Entity\Question" uriTemplate="/quizzes/{quizId}/questions">
        <uriVariables>
            <uriVariable parameterName="quizId" fromClass="App\Entity\Quiz" toProperty="quiz"/>
        </uriVariables>
        <normalizationContext>
            <values>
                <value name="groups">
                    <values>
                        <value>app:quiz:read</value>
                        <value>app:question:read</value>
                        <value>app:question:list</value>
                    </values>
                </value>
            </values>
        </normalizationContext>
        <denormalizationContext>
            <values>
                <value name="groups">
                    <values>
                        <value>app:question:write</value>
                        <value>app:question:edit</value>
                    </values>
                </value>
            </values>
        </denormalizationContext>

        <operations>
            <operation
                name="app_add_question"
                class="ApiPlatform\Metadata\Post"
                uriTemplate="/quizzes/{quizId}/questions/new"
                method="POST"
                controller="App\Controller\Api\Action\CreateQuestion"
                read="false"
                security="is_granted('QUESTION_CREATE', request.attributes.get('quizId'))"
            >
                <validationContext>
                    <values>
                        <value name="groups">
                            <values>
                                <value>app:question:write</value>
                            </values>
                        </value>
                    </values>
                </validationContext>
            </operation>
        </operations>
    </resource>

    <!-- Question {id}, get question, edit, delete question -->
    <resource class="App\Entity\Question" uriTemplate="/quizzes/{quizId}/questions/{id}">
        <uriVariables>
            <uriVariable parameterName="quizId" fromClass="App\Entity\Quiz" toProperty="quiz"/>
            <uriVariable parameterName="id" fromClass="App\Entity\Question" />
        </uriVariables>
        <normalizationContext>
            <values>
                <value name="groups">
                    <values>
                        <value>app:quiz:read</value>
                        <value>app:question:read</value>
                    </values>
                </value>
            </values>
        </normalizationContext>
        <denormalizationContext>
            <values>
                <value name="groups">
                    <values>
                        <value>app:question:write</value>
                        <value>app:question:edit</value>
                    </values>
                </value>
            </values>
        </denormalizationContext>
        <operations>
            <operation
                name="app_edit_question"
                method="PUT"
                class="ApiPlatform\Metadata\Put"
                uriTemplate="/quizzes/{quizId}/question_groups/{groupId}/questions/{id}"
            >
                <denormalizationContext>
                    <values>
                        <value name="groups">
                            <values>
                                <value>app:question:edit</value>
                            </values>
                        </value>
                    </values>
                </denormalizationContext>
                <validationContext>
                    <values>
                        <value name="groups">
                            <values>
                                <value>app:question:edit</value>
                            </values>
                        </value>
                    </values>
                </validationContext>
            </operation>
        </operations>
    </resource>
</resources>
