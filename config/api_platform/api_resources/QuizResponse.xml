    xsi:schemaLocation="https://api-platform.com/schema/metadata/resources-3.0 http://api-platform.com/schema/metadata/resources-3.0.xsd">
    <resource class="App\Entity\QuizResponse" uriTemplate="/api/quizzes/{quizId}/responses">
        <uriVariables>
            <uriVariable parameterName="quizId" fromClass="App\Entity\QuizResponse" toProperty="quiz"/>
        </uriVariables>
        <normalizationContext>
            <values>
                <value name="groups">
                    <values>
                        <value>app:quiz_response:read</value>
                        <value>app:quiz_response:list</value>
                    </values>
                </value>
            </values>
        </normalizationContext>
        <denormalizationContext>
            <values>
                <value name="groups">
                    <values>
                        <value>app:quiz_response:write</value>
                        <value>app:quiz_response:edit</value>
                    </values>
                </value>
            </values>
        </denormalizationContext>
    </resource>
</resources>
